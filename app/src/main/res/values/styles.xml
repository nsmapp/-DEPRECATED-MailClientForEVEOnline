<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="normalTextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/baseTextColor</item>
    </style>

    <style name="largeTextView" parent="normalTextView">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="extraLargeTextViewCente" parent="largeTextView">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="microTextView" parent="normalTextView">
        <item name="android:textSize">8sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>

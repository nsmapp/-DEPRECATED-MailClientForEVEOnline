<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape>
            <solid android:color="@color/mailIsReadBackground" />
            <corners
                android:bottomLeftRadius="8dp"
                android:bottomRightRadius="8dp"
                android:radius="8dp"
                android:topLeftRadius="8dp" />
            <padding
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                android:top="0dp" />
            <gradient
                android:angle="270"
                android:endColor="@color/shadowDark"
                android:startColor="@color/shadowLight" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/mailIsReadBackground" />
            <corners
                android:bottomLeftRadius="8dp"
                android:bottomRightRadius="8dp"
                android:radius="8dp"
                android:topLeftRadius="8dp" />
        </shape>
    </item>
</layer-list>

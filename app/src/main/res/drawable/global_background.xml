<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape>
            <solid android:color="@color/mailIsReadBackground"/>
            <corners
                android:topLeftRadius="8dp"
                android:radius="8dp"
                android:bottomLeftRadius="8dp"
                android:bottomRightRadius="8dp"/>
            <padding android:top="0dp"
                android:right="1dp"
                android:left="0dp"
                android:bottom="1dp"/>
            <gradient
                android:endColor="@color/shadowDark"
                android:startColor="@color/shadowLight"/>
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/mailIsReadBackground"/>
            <corners
                android:topLeftRadius="8dp"
                android:radius="8dp"
                android:bottomLeftRadius="8dp"
                android:bottomRightRadius="8dp"/>
        </shape>
    </item>
</layer-list>
